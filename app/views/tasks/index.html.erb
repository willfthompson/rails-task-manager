index.html.erb
<%= link_to "Add a new task", new_task_path %>
<% @tasks.each do |task| %>
<ul>
<li><%= task.title %></li>
<li><%= task.details %></li>
<li><%= task.completed %></li>
<%= link_to "Show details", task_path(task.id) %>
<%= link_to "Edit details", edit_task_path(task.id) %>
<%= link_to "Delete", delete_task_path(task.id), method: :delete %>
</ul>
 <% end %>
